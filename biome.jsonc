{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		// those folders are built or dependencies
		"ignore": ["dist/", "lib/", "node_modules/"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"lineEnding": "lf",
		"lineWidth": 80,
		"attributePosition": "auto"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true
	}
}
